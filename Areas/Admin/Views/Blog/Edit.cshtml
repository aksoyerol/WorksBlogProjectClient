@model BlogUpdateModel

@section Css{
<link rel="stylesheet" href="~/Trumbowyg/dist/ui/trumbowyg.min.css"/>
}
<div class="col-md-10 offset-1">


<form asp-action="Edit" method="POST" enctype="multipart/form-data">
<input type="hidden" asp-for="@Model.Id"/>
<div class="form-group">
    <label asp-for="@Model.Title"></label>
    <input asp-for="@Model.Title" class="form-control" type="text">
    <span asp-validation-for="@Model.Title"></span>
</div>

<div class="form-group">
    <label asp-for="@Model.ShortDescription" ></label>
    <input asp-for="@Model.ShortDescription" class="form-control" type="text">
    <span asp-validation-for="@Model.ShortDescription"></span>
</div>

<div class="form-group">
    <label asp-for="@Model.Description"></label>
    <textarea id="textEditor" asp-for="@Model.Description" class="form-control"></textarea>
    <span class="text-danger" asp-validation-for="@Model.Description"></span>
</div>

<div class="form-group">
    <label asp-for="@Model.FormFile"></label>
    <input  asp-for="@Model.FormFile" class="form-control-file" type="file">
    <span class="text-danger" asp-validation-for="@Model.FormFile"></span>
</div>

<button type="submit" class="btn btn-success btn-block">Save</button>
<div asp-validation-summary="All" class="text-danger lead"></div>
</form>
</div>

@section JavaScript{
    <script src="~/Trumbowyg/dist/trumbowyg.min.js"></script>
    <script>
        $("#textEditor").trumbowyg();
    </script>
}