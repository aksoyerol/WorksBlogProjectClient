@model List<BlogListModel>


<a class="btn btn-info btn-block my-2 text-white" asp-action="Create" asp-controller="Blog">New Blog</a>
<table class="table table-dark table-bordered rounded table-hover my-2">
    <thead class="thead">
        <tr>
            <th>Title</th>
            <th>Short Descp.</th>
            <th>Posted Time</th>
            <th>Panel</th>
        </tr>
    </thead>
    <tbody class="bg-light text-primary">
    @foreach(var item in Model){
        <tr>
            <td>@item.Title</td>
            <td>@item.ShortDescription</td>
            <td>@item.PostedTime.ToShortDateString()</td>
            <td>
                <a class="btn btn-warning btn-sm" asp-action="Edit" asp-route-id="@item.Id">Edit</a>
                <a class="btn btn-danger btn-sm" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
    <tfoot class="thead">
        <tr>
            
            <th>Title</th>
            <th>Short Descp.</th>
            <th>Posted Time</th>
            <th>Panel</th>
        </tr>
    </tfoot>
</table>