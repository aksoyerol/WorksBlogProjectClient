 @model List<CategoryListModel>
 <!-- Categories Widget -->
        <div class="card my-4">
          <h5 class="card-header">Categories</h5>
          <div class="row">
              <div class="col-md-12">
                <div class="list-group">
          @foreach(var item in Model)
                    {
                      <a asp-action="Index" class="list-group-item list-group-item-action d-flex justify-content-between align-items-center">@item.Name <span class="badge badge-success badge-pill">15</span></a>
                    }
                  
                </div>
              </div>
             
            </div>
 </div>
