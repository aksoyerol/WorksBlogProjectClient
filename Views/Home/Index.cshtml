@model List<BlogListModel>
<!-- Blog Post -->
@if(ViewBag.ActiveCategory!=null){
  <div class="alert alert-warning p-3 mt-4 mb-2">Looking for 
    <b>"<getcategoryname category-id="@(ViewBag.ActiveCategory)"></getcategoryname> "</b>
     Category
    </div>
  
}
  @foreach (var item in Model)
  {<div class="card mb-4 mt-4">
          <getblogimage id="@item.Id"></getblogimage>
          <div class="card-body">
            <h2 class="card-title">@item.Title</h2>
            <p class="card-text">@item.ShortDescription
            <a asp-action="BlogDetail" asp-route-id="@item.Id" class="btn btn-primary">Read More &rarr;</a>
          </div>
          <div class="card-footer text-muted">
            Posted on @item.PostedTime
            <a href="#">Start Bootstrap</a>
          </div>
        </div>
        }